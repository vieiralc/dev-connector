  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vieiralc/devConnector/issues"
  },
  "homepage": "https://github.com/vieiralc/devConnector#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^7.1.0",
    "config": "^3.3.7",
    "express": "^4.16.3",
    "express-validator": "^6.14.0",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^6.6.1",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "jest": "^29.0.3",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.3"
