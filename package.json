    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^7.1.0",
    "config": "^3.3.7",
    "express": "^4.16.3",
    "express-validator": "^6.14.0",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "moment": "^2.22.2",
    "mongoose": "^5.2.2",
    "passport": "^0.4.0",
